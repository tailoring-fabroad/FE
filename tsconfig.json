{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
	  "target": "ESNext",
	  "useDefineForClassFields": true,
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "allowJs": true,
	  "checkJs": true,
	  "isolatedModules": true,
	  "baseUrl": ".",
	  "types": ["svelte"],
	  "outDir": "./.tsbuild",
	  "paths": {
      		"$lib/*": ["src/lib/*"],
      		"$styles/*": ["src/styles/*"]
    	}
	},
	"include": ["src"]
}